<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8998EA">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orgRecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/categoryRecyclerView" />

    <TextView
        android:id="@+id/ErrorTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#BF362B"
        android:textSize="20sp" />


    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/progress_circular_home"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="?android:attr/progressBarStyle"
        android:layout_centerInParent="true"
        app:indicatorColor="@color/pastelGreen" />
</RelativeLayout>